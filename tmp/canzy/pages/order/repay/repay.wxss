}
.note-card{
  margin-left:20px;
  color:#A2A1A0;
  font-size:14px;
  margin-top:15px
}
.statu-card{
  font-size:24px;
  color:#00beaf;
  padding:5px 15px;
}
.number-card{
  font-size:70px;
  padding:0px 20px
}
.go-top-10{
  margin-top:10px
}

.operate {
  text-align: right;
  border-top: 1px solid #f0f0f0;
  padding-top: 10rpx;
}

.operate .operate-item {
  font-size: 12px;
  color: #fff;
  padding: 14rpx 18rpx;
  background-color: #00beaf;
  border-radius: 5px;
}

.operate .pay {
  margin-right: 60rpx;
}
.cancel {
  font-size: 12px;
  padding: 14rpx 18rpx;
  border-radius: 5px;
  background-color: white;
  color: #D1D1D1;
  margin-right: 60rpx;
}
.note{
  padding:5px 15px;
  background:white;
  margin-top:10px
}
.note-text{
  width:95%;
  font-size:14px;
  background:#F2F2F2;
  padding:10px;
  height:30px;
}
.top-bar{
  height:50px;
  font-size:14px;
  background: white;
  text-align:center;
  padding: 12px;
}
radio {
  border: 2rpx solid #ddd;
  border-radius:5px;
  height:30px;
  width:85px;
  color:#00beaf;
  text-align: center;
  line-height:26px;
}
.wx-radio-input{
  width: 40rpx;
  height: 40rpx; 
}
/* radio未选中时样式 */
radio .wx-radio-input{
  border: 2rpx solid #F8F8F8;
  border-radius: 50%;
  height: 26rpx;
  width: 26rpx;
}
/* radio选中时样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;/* 圆角 */
  font-size:40rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  background-color: #00beaf;
  border: 2rpx solid #00beaf;
}